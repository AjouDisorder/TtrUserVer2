<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_image"
        android:src="@drawable/ai"
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="218dp"
        android:layout_height="95dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_info_menu_restau_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="음식이름, 가게이름"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_info_dis_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="할인시간" />

        <TextView
            android:id="@+id/food_info_distance_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="거리, 남은 수량"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_info_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="할인율"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/food_info_dis_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="할인가격"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_info_ori_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="원래가격"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>